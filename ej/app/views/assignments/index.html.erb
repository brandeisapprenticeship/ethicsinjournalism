<p id="notice"><%= notice %></p>

<head>
  <style>
table, th, td {
    border: 1px solid black;
}

th, td {
    padding: 15px;
}
</style>
</head>
<h1 align="center">Assignment Listings</h1>
<table align="center">
  <thead>
    <tr>
        <td>Title</td>
        <td>Deadline</td>
        <td>Link to Submissions</td>
        <td>Show</td>
        <td>Edit</td>
        <td>Destroy</td>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      
      <tr>
         <td><%= assignment.title%></td>
        <td><%= assignment.deadline%></td>
        <td><!-- %= link_to 'Go to Posts', assignment.posts, class:'btn btn-default btn-xs' % --></td>
        <td><%= link_to 'Show', assignment, class:'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment), class:'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p align="center"><%= link_to 'New Assignment', new_assignment_path, class:'btn btn-primary btn-lg' %></p>


